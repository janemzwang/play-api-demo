# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api/property/:id           controllers.PropertyController.getById(id: Int)
GET     /api/property               controllers.PropertyController.get()
POST    /api/property               controllers.PropertyController.post()
PUT     /api/property/:id           controllers.PropertyController.put(id: Int)
DELETE  /api/property/:id           controllers.PropertyController.delete(id: Int)

GET     /api/property-media/:propertyId controllers.PropertyController.getMedia(propertyId: Int)