# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api/property/:mlsId           controllers.PropertyController.getById(mlsId: Int)
POST    /api/property                  controllers.PropertyController.createProperty()
PUT     /api/property/:mlsId           controllers.PropertyController.updateProperty(mlsId: Int)
DELETE  /api/property/:mlsId           controllers.PropertyController.deleteProperty(mlsId: Int)